generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model UserDetails {
  id          Int     @id @default(autoincrement())
  username    String
  description String
  groups      Group[] @relation("UserGroups")

  UserToGroup UserToGroup[]
}

model Group {
  id    Int           @id @default(autoincrement())
  name  String
  users UserDetails[] @relation("UserGroups")

  UserToGroup UserToGroup[]
}

model UserToGroup {
  user       UserDetails @relation(fields: [userId], references: [id])
  userId     Int
  group      Group       @relation(fields: [groupId], references: [id])
  groupId    Int
  assignedAt DateTime    @default(now())
  assignedBy String

  @@id([userId, groupId])
}
